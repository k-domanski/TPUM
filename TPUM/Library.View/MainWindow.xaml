<Window x:Class="Library.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library.View" 
        xmlns:vm="clr-namespace:Library.ViewModel;assembly=Library.ViewModel"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="Auto">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"/>
                <RowDefinition Height="7*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="5,5,0,0" Background="Orange">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Label Grid.Row="0" VerticalAlignment="Center">IMIE</Label>
                <Label Grid.Row="1" VerticalAlignment="Center">NAZWISKO</Label>
                <Label Grid.Row="2" VerticalAlignment="Center">ID</Label>
            </Grid>
            <ListBox Grid.Row="1" Margin="5,5,0,0" Background="Aqua">
                <StackPanel Margin="16" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton GroupName="BorrowedBooks" VerticalContentAlignment="Center"></RadioButton>
                        <Label>TYTUŁ</Label>
                        <Label>AUTOR</Label>
                        <Label>DATA ODDANIA</Label>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="16" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton GroupName="BorrowedBooks" VerticalContentAlignment="Center"></RadioButton>
                        <Label>TYTUŁ</Label>
                        <Label>AUTOR</Label>
                        <Label>DATA ODDANIA</Label>
                    </StackPanel>
                </StackPanel>
                <StackPanel Margin="16" Orientation="Vertical">
                    <StackPanel Orientation="Horizontal">
                        <RadioButton GroupName="BorrowedBooks" VerticalContentAlignment="Center"></RadioButton>
                        <Label>TYTUŁ</Label>
                        <Label>AUTOR</Label>
                        <Label>DATA ODDANIA</Label>
                    </StackPanel>
                </StackPanel>
            </ListBox>
            <Button Grid.Row="2" Margin="5,5,0,5">ZWRÓĆ KSIĄŻKĘ</Button>
        </Grid>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="10*"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ListBox ItemsSource="{Binding books}" Margin="5,5,5,0" Background="MediumAquamarine">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Margin="10,10,10,0" Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <RadioButton GroupName="Books" VerticalContentAlignment="Center">
                                    <WrapPanel>
                                        <Label Content="{Binding title}"/>
                                        <Label Content="{Binding author}"/>
                                        <Label Content="{Binding isbn}"/>
                                        <Label Content="{Binding count}"/>
                                    </WrapPanel>
                                </RadioButton>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Margin="5">WYPOŻYCZ KSIĄŻKĘ</Button>
                <Button Grid.Column="1" Margin="5">DODAJ KSIĄŻKĘ</Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
